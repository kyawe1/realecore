@model IEnumerable<RealEstateCore.Models.Entity.Interest>
@{
    ViewData["Title"] = "List Of Interest";
}
@if(TempData["good"] !=null){
    <ul>
        <li>
            @TempData["good"]
        </li>
    </ul>
}
@foreach (var i in Model)
{
    <div class='row-cols-1'>
        <div class='col'>
            <div class='d-lg-flex m-2 p-2 shadow-sm  justify-content-lg-evenly flex-shrink-0'>
                <div class='col-md-7 flex-shrink-0 m-2'>
                    <img src=@i.house.getlink() class='img-fluid'>
                </div>
                <div class='d-block my-auto'>
                    <div class='my-3'>
                        <div class='d-inline my-3'>
                            <ul>
                                <li class='d-inline bg-success p-2 rounded-3 text-light'><i
                                    class="bi bi-check-lg mx-2"></i>@i.house.type</li>
                                <li class='d-inline bg-warning p-2 rounded-3'>@i.house.House_Type</li>
                            </ul>
                        </div>
                    </div>
                    <table border=0 class='table table-borderless '>
                        <tbody>
                            <tr>
                                <td>
                                    <i class="bi bi-house-fill mx-2"></i>Name
                                </td>
                                <td>
                                    @i.house.Name
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <i class="bi bi-tag-fill mx-2"></i> Price
                                </td>
                                <td>
                                    @i.house.Price
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <i class="bi bi-geo-alt-fill mx-2"></i>Address
                                </td>
                                <td>
                                    @i.house.Address
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class='d-block mx-auto'>
                        <button class='btn btn-info py-2 my-2'><i class="bi bi-info-circle me-lg-2 m-sm-1"></i> More info
                        </button>
                        <button class='btn btn-primary py-2 my-2'><i
                            class="bi bi-person-check me-lg-2 m-sm-1"></i>Check</button>
                        <a asp-controller='User' asp-action="Delete" asp-route-id=@i.Id>
                        <button class='btn btn-warning py-2 my-2' name='btn-delete'><i
                            class="bi bi-trash me-lg-2 m-sm-1"></i>Delete</button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}